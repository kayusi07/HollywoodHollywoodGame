<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="hollywood.kayushi07.com.hollywoodhollywoodgame.Activity.GameActivity">

    <LinearLayout
        android:id="@+id/bollywood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/B_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/button_round_green_left"
            android:text="H"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/O_btn"
            android:layout_weight="1"
            android:background="@color/colorButtonGreen"
            android:textStyle="bold"
            android:text="O"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/L_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorButtonGreen"
            android:text="L"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/L2_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorButtonGreen"
            android:text="L"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Y_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorButtonGreen"
            android:text="Y"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/W_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorButtonGreen"
            android:text="W"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/O2_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorButtonGreen"
            android:text="O"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/O3_btn"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@color/colorButtonGreen"
            android:text="0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/D_btn"
            android:layout_weight="1"
            android:background="@drawable/button_round_right"
            android:textStyle="bold"
            android:text="D"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keys"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="38dp"
            android:fontFamily="serif-monospace"
            android:text="S__M_P__ _OD__ HHH__HH"
            android:textStyle="bold"/>
    </LinearLayout>

    <include layout="@layout/keyboard"
        android:id="@+id/keys"
        android:layout_above="@+id/adView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></include>

    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        android:visibility="invisible"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
